<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomla\Component\SWJProjects\Administrator\Field">
	<fieldset>
		<field name="alias" type="text"
			   label="JFIELD_ALIAS_LABEL"
			   description="JFIELD_ALIAS_DESC"
			   hint="JFIELD_ALIAS_PLACEHOLDER"
			   size="40"/>
	</fieldset>
	<fieldset name="global">
		<field name="id" type="text"
			   label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC"
			   class="readonly"
			   size="10"
			   default="0"
			   readonly="true"/>
		<field name="parent_id" type="categories"
			   label="COM_SWJPROJECTS_CATEGORY_PARENT"
			   required="true"
			   layout="joomla.form.field.list-fancy-select">
			<option value="1">JGLOBAL_ROOT_PARENT</option>
		</field>
		<field name="state" type="list"
			   label="JSTATUS"
			   description="JFIELD_PUBLISHED_DESC"
			   class="chzn-color-state"
			   filter="intval"
			   size="1"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<fields name="params">
			<field name="projects_layout" type="componentlayout"
				   label="JFIELD_ALT_LAYOUT_LABEL"
				   description="JFIELD_ALT_COMPONENT_LAYOUT_DESC"
				   useglobal="true"
				   extension="com_swjprojects"
				   view="projects"
				   class="form-select"/>
			<field type="serverschemelist"
				   name="server_scheme"
				   label="COM_SWJPROJECTS_SERVER_PARAMS_SERVER_SCHEME"
				   description="COM_SWJPROJECTS_SERVER_PARAMS_SERVER_SCHEME_DESC"
				   default="joomla"
				   class="form-select"
				   useglobal="true"
			/>
		</fields>
		<field name="lft" type="hidden" filter="unset"/>
		<field name="rgt" type="hidden" filter="unset"/>
	</fieldset>
</form>